<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EcoHuella.FootPrintPages.Food"
             Title="Food"
             Padding="20">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Calculate you food FootPrint"/>
            <Grid>
                <Label Text="Item" Grid.Column="0" Grid.Row="0"/>
                <Label Text="Times a Week" Grid.Column="1" Grid.Row="0"/>

                <Label Text="Fruit" Grid.Row="1" Grid.Column="0"/>
                <Picker x:Name="fruits" Grid.Row="1" Grid.Column="1">
                    <Picker.Items>
                        <x:String>0 - 1</x:String>
                        <x:String>2 - 3</x:String>
                        <x:String>4 - 5</x:String>
                        <x:String>6 - 7</x:String>
                        <x:String>8 or more</x:String>
                    </Picker.Items>
                </Picker>

                <Label Text="Vegetables" Grid.Row="2" Grid.Column="0"/>
