<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EcoHuella.UserPages.UserData"
             Title="Your Data!">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Name:" HorizontalOptions="Center"/>
            <Entry x:Name="nameEntry" Placeholder="(ej: Martin Freire)" HorizontalOptions="Center" />
            <Label Text="Student ID:" HorizontalOptions="Center"/>
            <Entry x:Name="idEntry" Placeholder="(ej: 136753)" Keyboard="Numeric" HorizontalOptions="Center"/>
            <Label Text="Mail:" HorizontalOptions="Center"/>
            <Entry x:Name="mailEntry" Placeholder="(ej: martin.vallejo@gmail.com)" HorizontalOptions="Center"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>